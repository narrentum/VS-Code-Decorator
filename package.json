{
  "name": "code-decorator",
  "displayName": "Code Decorator",
  "description": "A powerful VS Code extension that supports multiple decoration rules with configurable patterns and colors",
  "version": "1.2.1",
  "icon": "icon.png",
  "license": "MIT",
  "publisher": "Narrentum",
  "author": {
    "name": "Code Decorator Team",
    "email": "ischenkomv@gmail.com"
  },
  "contributors": [
    {
      "name": "GitHub Copilot",
      "role": "AI Assistant & Code Generation"
    }
  ],
  "files": [
    "out/**",
    "package.json",
    "README.md",
    "icon.png",
    "images/**"
  ],
  "keywords": [
    "decoration",
    "highlight",
    "pattern",
    "syntax",
    "color",
    "code-decorator",
    "code-decoration",
    "code-highlighting",
    "syntax-highlighting",
    "editor-decorations",
    "vscode-extension",
    "todo",
    "annotations",
    "productivity"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/narrentum/VS-Code-Decorator"
  },
  "bugs": {
    "url": "https://github.com/narrentum/VS-Code-Decorator/issues"
  },
  "homepage": "https://github.com/narrentum/VS-Code-Decorator#readme",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "Decorator.helloWorld",
        "title": "Hello World"
      }
      ,
      {
        "command": "codeDecorator.toggle",
        "title": "Toggle Code Decorator"
      }
    ],
    "configuration": {
      "title": "Code Decorator",
      "properties": {
        "codeDecorator": {
          "type": "object",
          "description": "Top-level Code Decorator settings object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "Enable/disable all code decoration"
            },
            "ignoreInComments": {
              "type": "boolean",
              "default": false,
              "description": "Global default: if true, skip matches that appear inside comments (single-line '//' or block '/* ... */')"
            },
            "ignoreInString": {
              "type": "boolean",
              "default": false,
              "description": "Global default: if true, skip matches that are inside string literals (single, double or template quotes)"
            },
            "rules": {
              "type": "array",
              "default": [
                {
                  "condition": "",
                  "pattern": "\\bDebug\\.LogWarning\\b",
                  "color": "#d1af27",
                  "backgroundColor": "",
                  "borderColor": "",
                  "enabled": true,
                  "description": "Highlight Debug.LogWarning calls"
                }
              ],
              "items": {
                "type": "object",
                "properties": {
                  "condition": { "type": "string", "description": "Pattern that triggers this decoration rule (leave empty for always active)" },
                  "pattern": { "type": "string", "description": "Pattern to highlight when condition is found (supports regex)" },
                  "color": { "type": "string", "description": "Text color (hex color)", "format": "color-hex", "default": "#0066ff" },
                  "backgroundColor": { "type": "string", "description": "Background color", "format": "color-hex", "default": "#0066ff1a" },
                  "groupColors": { "type": "array", "description": "Per-capture-group text colors (hex color strings)", "items": { "type": "string", "format": "color-hex" }, "default": [] },
                  "groupBackgrounds": { "type": "array", "description": "Per-capture-group background colors (hex strings)", "items": { "type": "string", "format": "color-hex" }, "default": [] },
                  "borderColor": { "type": "string", "description": "Border color (leave empty or 'transparent' for no border)", "format": "color-hex", "default": "#0066ff" },
                  "groupTextDecorations": { "type": "array", "description": "Per-capture-group text decorations (e.g. 'underline', 'line-through')", "items": { "type": "string" }, "default": [] },
                  "textDecoration": { "type": "string", "description": "Text decoration: 'line-through', 'underline', 'overline', or combination like 'underline line-through'", "default": "" },
                  "ignoreInString": { "type": "boolean", "description": "If true, skip matches that are inside string literals (single, double or template quotes)", "default": false },
                  "ignoreInComments": { "type": "boolean", "description": "If true, skip matches that appear inside comments (single-line '//' or block '/* ... */')", "default": false },
                  "enabled": { "type": "boolean", "description": "Enable this decoration rule", "default": true },
                  "description": { "type": "string", "description": "Rule description for reference" }
                },
                "required": ["pattern"]
              },
              "description": "List of decoration rules. Each rule has a condition (trigger), pattern (what to highlight), and styling."
            }
          }
        },
        "codeDecorator.rules": {
          "type": "array",
          "default": [
            {
              "condition": "",
              "pattern": "\\bDebug\\.LogWarning\\b",
              "color": "#d1af27",
              "backgroundColor": "",
              "borderColor": "",
              "enabled": true,
              "description": "Highlight Debug.LogWarning calls"
            },
            {
              "condition": "",
              "pattern": "\\bDebug\\.LogError\\b",
              "color": "#ff0000",
              "backgroundColor": "",
              "borderColor": "",
              "enabled": true,
              "description": "Highlight Debug.LogError calls"
            },
            {
              "condition": "",
              "pattern": "\\bDebug\\.Log\\b",
              "color": "#80b9ff",
              "backgroundColor": "",
              "borderColor": "",
              "enabled": true,
              "description": "Highlight Debug.Log calls"
            },
            {
              "condition": "using _this",
              "pattern": "_this",
              "color": "#0066ff",
              "backgroundColor": "rgba(0, 102, 255, 0.1)",
              "borderColor": "#0066ff",
              "enabled": true,
              "description": "Default _this highlighting"
            },
            {
              "condition": "",
              "pattern": "//\\s*TODO:.*?\\[Fixed\\].*",
              "color": "#888888",
              "backgroundColor": "",
              "borderColor": "",
              "textDecoration": "line-through",
              "enabled": true,
              "description": "Strike through fixed TODO items"
            },
            {
              "condition": "",
              "pattern": "//\\s*TODO:.*?\\[QA\\].*",
              "color": "#ff8c00",
              "backgroundColor": "",
              "borderColor": "",
              "textDecoration": "",
              "enabled": true,
              "description": "Highlight QA TODO items in orange"
            }
          ],
          "items": {
            "type": "object",
            "properties": {
              "condition": {
                "type": "string",
                "description": "Pattern that triggers this decoration rule (leave empty for always active)"
              },
              "pattern": {
                "type": "string", 
                "description": "Pattern to highlight when condition is found (supports regex)"
              },
              "color": {
                "type": "string",
                  "description": "Text color (hex color)",
                  "format": "color-hex",
                "default": "#0066ff"
              },
              "backgroundColor": {
                "type": "string",
                  "description": "Background color",
                  "format": "color-hex",
                  "default": "#0066ff1a"
              },
              "groupColors": {
                "type": "array",
                "description": "Per-capture-group text colors (hex color strings)",
                "items": {
                  "type": "string",
                  "format": "color-hex"
                },
                "default": []
              },
              "groupBackgrounds": {
                "type": "array",
                "description": "Per-capture-group background colors (hex strings)",
                "items": {
                  "type": "string",
                  "format": "color-hex"
                },
                "default": []
              },
              "borderColor": {
                "type": "string",
                  "description": "Border color (leave empty or 'transparent' for no border)", 
                  "format": "color-hex",
                  "default": "#0066ff"
              },
              "groupTextDecorations": {
                "type": "array",
                "description": "Per-capture-group text decorations (e.g. 'underline', 'line-through')",
                "items": {
                  "type": "string"
                },
                "default": []
              },
              "textDecoration": {
                "type": "string",
                "description": "Text decoration: 'line-through', 'underline', 'overline', or combination like 'underline line-through'",
                "default": ""
              },
              "ignoreInString": {
                "type": "boolean",
                "description": "If true, skip matches that are inside string literals (single, double or template quotes)",
                "default": false
              },
              "ignoreInComments": {
                "type": "boolean",
                "description": "If true, skip matches that appear inside comments (single-line '//' or block '/* ... */')",
                "default": false
              },
              "enabled": {
                "type": "boolean",
                "description": "Enable this decoration rule",
                "default": true
              },
              "description": {
                "type": "string",
                "description": "Rule description for reference"
              }
            },
            "required": ["pattern"]
          },
          "description": "List of decoration rules. Each rule has a condition (trigger), pattern (what to highlight), and styling."
        },
        "codeDecorator.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable all code decoration"
        },
        "codeDecorator.ignoreInComments": {
          "type": "boolean",
          "default": false,
          "description": "Global default: if true, skip matches that appear inside comments (single-line '//' or block '/* ... */')"
        },
        "codeDecorator.ignoreInString": {
          "type": "boolean",
          "default": false,
          "description": "Global default: if true, skip matches that are inside string literals (single, double or template quotes)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
